{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES5",
    "lib": ["ES2017", "DOM"],
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "outDir": "./tsc-out/",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
