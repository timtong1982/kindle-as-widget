{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ESNext",
        "lib": ["ES2017", "DOM"],
        "sourceMap": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "outDir": "./tsc-out/",
        "typeRoots": ["node_modules/@types"],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
